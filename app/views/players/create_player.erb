<form action="/players/signup" method="post">


<p><label for="player[username]">Username:</label>
<input type="text" name="player[username]" id="username" placeholder='Choose a Username' onfocus="this.placeholder = ''" onblur="this.placeholder = 'Choose a Username'" /></p>

<p><label for="player[moniker]">Moniker</label>
<input type="text" name="player[moniker]" id="Moniker" placeholder="Choose a Moniker" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Choose a Moniker'" /></p>

<p><label for="name[password]">Password</label>
<input type="text" name="player[password]" id="password" placeholder="Choose a Password" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Choose a Password'" /></p>


<h3 align="center" onMouseOver="this.style.color='#00F'"
   onMouseOut="this.style.color='#000'"><input type="submit" value="Create User"></h3>
